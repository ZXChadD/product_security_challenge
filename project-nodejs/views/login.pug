doctype html
html
    head
        title Login
        meta(
            name="viewport" 
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        )
        script(src="https://code.jquery.com/jquery-3.4.1.js"   integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="   crossorigin="anonymous")
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,700&display=swap")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
        block stylesheets
    body
        .container
            .row                       
                h2(class="text-center") Login
                div(class="login-form")
                    form(id="login-form" action="/api/login", method="post")
                        .form-group
                            input(type="text" name="name" class="login-name form-control" placeholder="Username" required="required")

                        .form-group
                            input(type="password" name="password" class="login-password form-control" placeholder="Password" required="required")
                       
                        .form-group
                            input(type="hidden" name="_csrf" value="${req.csrfToken()}")
                            
                        .form-group
                            button(type="submit" class="btn btn-primary btn-block") Sign in

                        a(href='/forgetpassword') Forget Password
                        br
                        a(href='/register') Register

script(src="/js/login.js")
script(src="/sweetalert2/dist/sweetalert2.all.min.js")
